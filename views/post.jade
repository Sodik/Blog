extends layout
include header

block content
  div(class="col-md-6")
    h1= title
    p= text

    if authorized
      a(href="/edit-post/#{post_id}", class="btn btn-success") Edit

    form(class="form", method="post", action="/comment/#{post_id}")
      h2 Add comment
      div(class="form-group")
        label(for="author") Author
        input(type="text", class="form-control", name="author", id="author")
      div(class="form-group")
       label(for="comment") Comment
       textarea(class="form-control form-group", name="comment" id="comment")
      input(class="btn btn-success" vlaue="Submit" type="submit")

    h3 Comments
    if(comments)
      ul(class="list-group")
        each comment in comments
          li(class="list-group-item")
            strong #{comment.author}
            p #{comment.text}