mixin header(authorized)
  header(class="clearfix")
    div(class="btn-group form-group")
      a(href="/", class="btn btn-default") Home page
      if authorized
        a(href="/logout", class="btn btn-danger") Logout
      else
        a(href="/login", class="btn btn-success") Login
        a(href="/sign-up", class="btn btn-primary") Sign up